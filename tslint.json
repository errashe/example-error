{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "./node_modules/**"
    ]
  },
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "object-literal-sort-keys": false,
    "object-literal-shorthand": false,
    "ordered-imports": false,
    "no-angle-bracket-type-assertion": false,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "interface-name": [
      true,
      "never-prefix"
    ]
  },
  "rulesDirectory": []
}
